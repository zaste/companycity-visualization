{
  "name": "companycity-visualization",
  "version": "1.0.0",
  "description": "Enterprise-grade 3D infrastructure visualization platform",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:types": "tsc --emitDeclarationOnly",
    "build:docs": "typedoc src/index.ts",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "analyze": "npm run build && npx webpack-bundle-analyzer dist/stats.json",
    "prepare": "husky install",
    "release": "semantic-release",
    "demo:serve": "npx serve demo -s",
    "benchmark": "node scripts/benchmark.js"
  },
  "keywords": [
    "3d",
    "visualization",
    "webgl",
    "threejs",
    "infrastructure",
    "dashboard",
    "enterprise",
    "typescript",
    "web-components"
  ],
  "author": {
    "name": "CompanyCity Team",
    "email": "dev@companycity.dev",
    "url": "https://github.com/zaste/companycity-visualization"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zaste/companycity-visualization.git"
  },
  "bugs": {
    "url": "https://github.com/zaste/companycity-visualization/issues"
  },
  "homepage": "https://zaste.github.io/companycity-visualization",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/three": "^0.161.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "@playwright/test": "^1.41.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "semantic-release": "^23.0.0",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "three": "^0.161.0"
  },
  "peerDependencies": {
    "three": ">=0.160.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/styles.css"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "sideEffects": false
}
